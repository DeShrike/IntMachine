///////////////
// Factorial //
///////////////

// Calculates Factorial(AX) -> BX


// def Factorion(v):
//    if v == 1:
//        return 1
//    if v == 0:
//        return 1
//    return v * Factorial(v - 1)

Factorial:

PUSH CX

CMP AX, 0
JZ Return1

CMP AX, 1
JZ Return1

PUSH AX

DEC AX          // AX = AX - 1

CALL Factorial

POP AX
MUL BX, AX

JMP Return

Return1:

MOV BX, 1

Return:

POP CX
RET
